[core]
	excludesfile = ~/.gitignore
	editor = nvim
	ignorecase = false
	pager = delta
[user]
	name = ssh-void
	email = draklinux@protonmail.com
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = auto
[alias]
	a = "!git add * ; git add ."
	aa = "!git status --short | fzy | awk '{print $2}' | xargs git add"
	s = status -b -s
	d = diff
	co = checkout
	ci = commit
	ca = commit -a
	ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
	pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
	br = branch
	ba = branch -a
	bm = branch --merged
	bn = branch --no-merged
	hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
	df = "!git hist | fzy -l 25 | awk '{print $2}' | xargs -I {} git diff {}^ {}"
	pc = "!git clean -fd && git reset --hard && git pull"
	llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
	sl = log -10 --color=always --pretty='format:%C(auto)%h %<(60,trunc)%s %>|(-35)%d%>|(-20)%aN%>|(-1)%ah' --abbrev-commit
	last = log -1 HEAD --stat
	aliases = "!git config -l | grep ^alias | cut -c 7- | sort | fzy -l 25 -p "aliases: ""

[hub]
	protocol = https

[blame]
	coloring = highlightRecent

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = line-numbers decorations
	navigate = true
	light = false
	line-numbers = true
