#!/usr/bin/env bash

# Vérifie si un appareil est connecté
if ! adb devices | grep -w "device" > /dev/null; then
    echo "Aucun appareil connecté via adb."
    exit 1
fi
# Installe tous les fichiers APK dans le répertoire actuel
for apk in *.apk; do
    if [[ -f "$apk" ]]; then
        echo "Installation de $apk..."
        adb install "$apk"
        if [ $? -eq 0 ]; then
            echo "$apk installé avec succès."
        else
            echo "Échec de l'installation de $apk."
        fi
    fi
done