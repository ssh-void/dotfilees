#!/usr/bin/env bash

if [ -f "$1" ]; then
    case "$1" in
        *.tar.bz2)   tar xjvf "$1"   ;;
        *.tar.gz)    tar xzvf "$1"   ;;
        *.bz2)       bunzip2 -v "$1"   ;;
        *.rar)       unrar x -v "$1"   ;;
        *.gz)        gunzip -v "$1"    ;;
        *.tar)       tar xvf "$1"    ;;
        *.tbz2)      tar xjvf "$1"   ;;
        *.tgz)       tar xzvf "$1"   ;;
        *.zip)       bsdtar -xvf "$1" ;;
        *.Z)         uncompress -v "$1";;
        *.7z)        7z e "$1"      ;;
        *.deb)       bsdtar -xvf "$1" ;;
        *.tar.xz)    tar xvf "$1"    ;;
        *.tar.zst)   tar --use-compress-program=unzstd -xvf "$1" ;;
        *.xz)        unxz -k -v "$1"   ;; 
        *.img.xz)    xz -dv "$1"     ;;  
        *)           echo "'$1' cannot be extracted via extract" ;;
    esac
else
    echo "'$1' is not a valid file"
fi