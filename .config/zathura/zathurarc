#set recolor-lightcolor rgba(0,0,0,0)
set default-bg rgba(0,0,0,0.7)
set recolor-lightcolor rgba(255,255,255,0)
set selection-clipboard clipboard
set scroll-step 100
set font "TerminessTTF Nerd Font bold 12"
set zoom-step 1.2

# Mappings pour le mode normal
map D set "first-page-column 1:2"
map i zoom in
map <Up> zoom in
map <Down> zoom out
map o zoom out
map l scroll up
map k scroll down
map f toggle_fullscreen
map L goto top
map K goto bottom
unmap j

# Mappings pour le mode fullscreen
map [fullscreen] D set "first-page-column 1:2"
map [fullscreen] i zoom in
map [fullscreen] o zoom out
map [fullscreen] l scroll up
map [fullscreen] k scroll down
map [fullscreen] f toggle_fullscreen
map [fullscreen] L goto top
map [fullscreen] K goto bottom



# Couleurs & Thème
set recolor true                # Mode nuit (inverser les couleurs)
set recolor-lightcolor "#000000" # Couleur texte (noir)
set recolor-darkcolor "#FFFFFF"  # Couleur fond (blanc)
set default-bg "#2E3440"        # Arrière-plan (couleur hex)

# ============================
# Colorscheme
# ============================

# # Completion
set completion-bg "#282828"
set completion-fg "#ebdbb2"
set completion-group-bg "#282828"
set completion-group-fg "#ebdbb2"
set completion-highlight-bg "#ebdbb2"
set completion-highlight-fg "#282828"

# Default
set default-bg "#282828"
set default-fg "#ebdbb2"

# Inputbar
set inputbar-bg "#282828"
set inputbar-fg "#ebdbb2"

# Statusbar
set statusbar-bg "#282828"
set statusbar-fg "#ebdbb2"


# Notification (commented out)
set notification-bg "#282828"
set notification-fg "#ebdbb2"
set notification-error-bg "#cc241d"
set notification-error-fg "#ebdbb2"
set notification-warning-bg "#d79921"
set notification-warning-fg "#282828"

# Highlight
set highlight-color "rgba(215, 153, 33, 0.5)"
set highlight-active-color "rgba(215, 153, 33, 0.5)"

# Loading
set render-loading-bg "#282828"
set render-loading-fg "#ebdbb2"

# ============================
# Configurations
# ============================

# Scrollbar
set show-scrollbars true
set show-v-scrollbar true
set show-h-scrollbar false

# Highlight
set highlight-transparency "0.1"

# Recoloring
set recolor false
set recolor-keephue false

# Window
set window-title-basename true
set window-title-home-tilde true
set window-title-page true

# Statusbar
set statusbar-basename true
set statusbar-home-tilde false

# Clipboard
set selection-clipboard "clipboard"

# Sandbox
set sandbox none
