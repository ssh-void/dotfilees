# ssd
alias mountssd="mkdir $HOME/ssd; doas blkid; sleep 1; doas mount -t ntfs-3g -o rw UUID=675902260822676E /home/sh/ssd/"
alias umountssd="doas umount $HOME/ssd; sleep 1; doas rm -rf $HOME/ssd"
