# .bashrc
# If not running interactively, don't do anything
[[ $- != *i* ]] && return

GRC_ALIASES=true
[[ -s "/etc/profile.d/grc.sh" ]] && source /etc/grc.sh

echo -e -n "\x1b[\x35 q"

# sources /etc/bash.bashrc).
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

export PS1="\[\e[33m\]\u\[\e[m\][\[\e[36m\]\w\[\e[m\]\]]$ "

# XBPS:
alias q="xbps-query -Rs"
alias u="xbps-install -S && xbps-install -u xbps && xbps-install -Su"
alias i="xbps-install -S"
alias c="xbps-remove -RoO && vkpurge rm all"
alias d="xbps-remove"

# Other:
alias vsxh="vim ~/.config/sxhkd/sxhkdrc"
alias xp="xclip -selection clipboard"
alias ram="ps -ely | tr -s ' ' |cut -d ' ' -f8,13 | grep"
alias sb="source ~/.bashrc"
alias sz="source ~/.zshrc"
alias rm="rm -r"
alias T="du -sh"
alias cl="clear"
alias copy="rsync -P"
alias rg="ranger"
alias m="man"
alias pp="shutdown -P now"
alias rr="shutdown -r now"
alias ls="ls --color=auto"
alias l="eza -l --color=always --group-directories-first"  # long format
alias ll="eza -dlg .* --color=auto"
alias ld="ls -d */"
alias v="nvim"
alias vi="nvim"
alias ipq="ip -f inet address | grep inet  | grep -v 'lo$' | cut -d ' ' -f 6,13 && curl ifconfig.me && echo ' external ip'"
alias h='history | cut -c 8- | tac | fzy -l 15 | xclip -selection clipboard'
